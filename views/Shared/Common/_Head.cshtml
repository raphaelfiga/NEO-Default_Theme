@{
    string _classSearch = Session["idEventList"] == null ? "search" : "filterListEventsProducts";
}
<div class="ui container fluid _header">
<div class="ui stackable container grid">
        <div class="row topo">
            <div class="ui three wide column center text grid">
                <div class="row">
                    <div class="ten wide mobile sixteen wide computer column">
                        <a href="@(Session["idEventList"] == null ? "/Home" : "#")">
                            <img class="ui middle aligned image" src="/assets/image/logo/logo.png" alt="">
                        </a>
                    </div>
                    <div class="right floated left aligned four wide mobile only column">
                        <a id="wsnavtoggle" class="animated-arrow"><span></span></a>
                        <i class="wsf_medium cart icon cartbutton mini-cart"></i>
                    </div>
                </div>
            </div>
            <div class="ui thirteen wide column grid ">
                <div class="row">
                    <div class="sixteen wide mobile twelve wide computer column">
                        <div class="ui category @_classSearch">
                        <div class="ui icon input fluid">
                            <input class="prompt" type="text" placeholder="Buscar...">
                            <i class="search icon"></i>
                        </div>
                        <div class="results"></div>
                    </div>
                    </div>
                    <div class="four wide right aligned tablet computer only column">
                        <div id="cartButton" class="ui labeled button cartbutton mini-cart no margin bottom" tabindex="0" data-segment="@(Session["segment"] != null ? Session["segment"] : "b2c")">
                        <div class="ui basic primary button ">
                            <i class="cart icon"></i>
                            <span>@(Session["idEventList"] == null && Session["EventList"] == null ? "Meu Carrinho" : "Minha Lista")</span>
                        </div>
                        <a class="ui left pointing primary label" id="total_itens_card">
                            @{
                                if (Session["EventList"] == null)
                                {
                                    @Html.Action("TotalItensCart", "Checkout")
                                }else
	                            {
	                                @Html.Action("TotalItensList", "EventList")
                                }
                            }
                        </a>
                    </div>
                    </div>
                    <div class="ui hidden divider mobile only"></div>
                    <div class="sixteen wide column">
                        @Html.Action("Menu", "Home")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>